[
    {
        "layer": "top",
        "position": "top",
        "margin-top": 6,
        "margin-bottom": 2,
        "margin-left": 6,
        "margin-right": 6,

        "modules-left": [
            //"custom/shutdown",
            "custom/logo",
            "hyprland/workspaces"
            //"custom/launcher",
            //"custom/files",
            //"sway/mode",
            //"sway/workspaces"
        ],

        "modules-center": [
            //"sway/window"
            "hyprland/window"
        ],

        "modules-right": [
            "custom/keyboard-layout",
            "network",
            "memory",
            "cpu",
            "pulseaudio",
            //"upower",
            "tray",
            "custom/notification",
            "clock",
            "battery"
        ],

        "custom/logo": {
            "format": "Ôåì ",
            "tooltip-format": "You're on NixOS!",
            "on-click": "exec ~/.config/waybar/scripts/power.sh"
        },

        "custom/notification": {
          "tooltip": false,
          "format": "{icon}",
          "format-icons": {
            "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
            "none": "ÔÇ¢",
            "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
            "dnd-none": "Ôá∑"
          },
          "return-type": "json",
          "exec": "swaync-client -swb",
          "on-click": "swaync-client -t -sw",
          "on-click-right": "swaync-client -d -sw",
          "escape": true
        },

        "idle_inhibitor": {
            "format": "{icon} ",
            "format-icons":{
                "activated": "ÔÅÆ",
                "deactivated": "ÔÅ∞"
            }
        },

        "backlight": {
            "format": "{brightness}% ÔÑâ"
        },

        "upower": {
            "on-click": "exec ~/.config/waybar/scripts/power.sh"
        },

        "custom/shutdown": {
            "on-click": "exec ~/.config/waybar/scripts/power.sh",
            "format": "‚èª",
            "tooltip": false
        },

        "battery": {
            "states": {
                "warning": 30,
                "critical": 15
            },
            "format": "{capacity}% {icon}",
            "format-charging": "{capacity}% Ôóß",
            "format-plugged": "{capacity}% Ôá¶",
            "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
            // "on-click": "exec ~/.config/waybar/scripts/power.sh",
            "tooltip": true
        },

        "clock": {
            "interval": 10,
            "format-alt": "{:%e %b %Y} ÔÅ≥ ",
            "format": "{:%H:%M}",
            "tooltip-format": "{:%e %B %Y}",
            "on-click-right": "thunderbird"
        },

        "cpu": {
            "interval": 5,
            "format": "{usage}% ({load}) {icon} Ôãõ",
            "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
            "states": {
                "warning": 70,
                "critical": 90
            },
            "on-click": "foot --app-id=htop --title=htop htop"
        },

        "custom/keyboard-layout": {
            "exec": "hyprctl devices | grep keymap | tail -1 | awk -F': ' '{print substr($2, 1,2)}'",
            "interval": 1,
            "format": "ÔÑú  {}",
            "signal": 1,
            "tooltip": false,
            "on-click": "~/.config/waybar/scripts/keyhint.sh"
        },

        "memory": {
            "interval": 5,
            "format": "{}% {icon} ÔÄπ",
            "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
            "on-click": "foot --app-id=glances --title=glances glances",
            "states": {
                "warning": 70,
                "critical": 90
            }
        },

        "network": {
            "interval": 5,
            "format-wifi": "{essid} ({signalStrength}%) Ôá´ ",
            "format-ethernet": "{ifname}: {ipaddr}/{cidr} ÔÉ¨ ",
            "format-disconnected": "‚ö†  Disconnected",
            "tooltip-format": "{ifname}: {ipaddr}",
            //"on-click": "foot--app-id=nmtui --title=nmtui nmtui"
        },
        "network#vpn": {
            "interface": "tun0",
            "format": "{essid} ({signalStrength}%) ÔÄí ",
            "format-disconnected": "‚ö†  Disconnected",
            "tooltip-format": "{ifname}: {ipaddr}/{cidr}"
        },

        "sway/mode": {
            "format": "Ô≠ï {}",
            "tooltip": false
        },

        "sway/window": {
            "format": "{}",
            "max-length": 120,
            "rewrite": {
                "(.*) - Mozilla Firefox": "üåé $1",
                "(.*) - vi": "ÓüÖ $1",
                "(.*) - zsh": "ÔÑ† [$1]"
            }
        },

        "hyprland/window": {
            "format": "{}",
            "max-length": 60,
            "rewrite": {
                "(.*) - Mozilla Firefox": "üåé $1",
                "(.*) - vi": "ÓüÖ $1",
                "(.*) - zsh": "ÔÑ† [$1]"
            }
        },

        "sway/workspaces": {
            "disable-scroll": true,
            "disable-markup" : false,
            "all-outputs": false,
            "format": "  {icon}  ",
            "format-icons": {
                "urgent": "Ôî•",
                "active": "Ôò´"
            }
        },

        "hyprland/workspaces": {
            "format": "{name}"
        },

        "pulseaudio": {
            "scroll-step": 1,
            "format": "{volume}% {icon}",
            "format-bluetooth": "{volume}% {icon} Ôäî {format_source}",
            "format-bluetooth-muted": "Ôö© {icon} Ôäî {format_source}",
            "format-muted": "Û∞ùü {format_source}",
            "format-source": "{volume}% ÔÑ∞",
            "format-source-muted": "ÔÑ±",
            "format-icons": {
                "headphone": "Ôüä",
                "hands-free": "Ô≠ã",
                "headset": " Ôüç ",
                "phone": "ÔÇï",
                "portable": "ÔÇï",
                "car": "ÔÜπ",
                "default": ["ÔÄß"]
            },
            "on-click": "pavucontrol",
            "on-scroll-up": "pamixer -ui 2",
            "on-scroll-down": "pamixer -ud 2"
        },

        "custom/weather": {
            "exec": "~/.config/waybar/scripts/weather.sh",
            "format": "{text} {icon}",
            "return-type": "json",
            "interval": 600,
            "tooltip-format": "{tooltip}"
        },

        "tray": {
            "icon-size": 18,
            "spacing": 10,
            "show-passive-items": true
         },

        "backlight#icon": {
            "format": "{icon}",
            "format-icons": ["ÔÜÖ"],
            "on-scroll-down": "brightnessctl -c backlight set 1%-",
            "on-scroll-up": "brightnessctl -c backlight set +1%"
        },

        "backlight#value" :{
             "format": "{percent}%",
             "on-scroll-down": "brightnessctl -c backlight set 1%-",
             "on-scroll-up": "brightnessctl -c backlight set +1%"
        },

        "custom/firefox": {
            "format": "ÓùÖ ",
            "on-click": "exec firefox",
            "tooltip": false
        },

        "custom/terminal": {
            "format": "ÔÑ† ",
            "on-click": "exec alacritty",
            "tooltip": false
        },

        "custom/files": {
            "format": "Ôùä ",
            "on-click": "exec thunar",
            "tooltip": false
        },

        "custom/launcher": {
            "format":"ÔÑµ ",
            "on-click": "nwg-drawer",
            "tooltip": false
        },

        "custom/power": {
            "format":"‚èª",
            "on-click": "exec nwg-bar -t power.json -s power.css",
            "tooltip": false
        },
        "custom/music": {
            "format": "Ô§∏",
            "tooltip": false,
            "on-click": "exec nwg-bar -t player.json -s player.css",
            "on-click-right": "com.github.geigi.cozy"
        }
    },
    {
        "layer": "bottom",
        "position": "bottom",
        "height": 42,
        "output": "eDP-1",
        "width": 10,
        "margin-top": 6,
        "margin-bottom": 0,
        "margin-left": 6,
        "margin-right": 6,
        "modules-left": [],
        "modules-center": [
            "wlr/taskbar"
        ],
        "modules-right": [],

        "wlr/taskbar": {
            "active-first": true,
            "all-outputs": true,
            "format": "{icon}",
            "icon-size": 24,
            "icon-theme": "Dracula",
            "tooltip-format": "{title}",
            "on-click": "activate",
            "on-click-middle": "close",
            "ignore-list": [
               "Alacritty"
            ],
            "app_ids-mapping": {
              "firefoxdeveloperedition": "firefox-developer-edition"
            }
        }
    }
]
